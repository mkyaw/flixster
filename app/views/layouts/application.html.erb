<!DOCTYPE html>
<html>
<head>
  <title>Flixster</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="http://vjs.zencdn.net/4.12/video-js.css" rel="stylesheet">
	<script src="http://vjs.zencdn.net/4.12/video.js"></script>
	<style>
    .video-js {padding-top: 56.25%}
    .vjs-fullscreen {padding-top: 0px}
  </style>
</head>
<body>

<div id="wrap">
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to "Flixster", root_path, :class => "navbar-brand" %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><%= link_to "See All Courses", courses_path %></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <% if user_signed_in? %>
		        <li><%= link_to "My Dashboard", dashboard_path %></li>
		        <li>
		        	<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
		        </li>
		    	<% else %>
		    		<li><%= link_to "Sign Up", new_user_registration_path %></li>
		    		<li><%= link_to "Sign In", new_user_session_path %></li>
		    	<% end %>
	        
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>


	<% if notice.present? %>
		<p class="notice alert-info"><%= notice %></p>
	<% end %>
		
	<% if alert.present? %>
		<p class="alert alert-danger"><%= alert %></p>
	<% end %>

	<%= yield %>
</div>

<br class="clr" />

<div id="footer">
	<div class="container text-center">
		<div class="col-xs-12 col-sm-3">
			<b>Teachers</b>
			<br />
			<%= link_to 'Teach a Course', new_instructor_course_path %>
			<br />
			<i><%= link_to 'My Dashboard', dashboard_path %></i>
			<br />
		</div>
		<div class="col-xs-12 col-sm-3">
			<b>About</b>
			<br />
			<%= link_to "Team", "#" %>
			<br />
			<%= link_to "Careers", "#" %>
			<br />
			<%= link_to "Privacy Policy", "#" %>
			<br />
		</div>
		<div class="col-xs-12 col-sm-3">
			<b>Contact</b>
			<br />	
			myo@example.com
			<br />
			1 Main St
			<br />
			Los Angeles, CA 90034
			<br />
		</div>
		<div class="col-xs-12 col-sm-3 social">
			<b>Social</b>
			<br />
			<br />
			<%= link_to "https://github.com/mkyaw", :target => "_blank" do %>
				<%= image_tag 'gh.png', :class => 'social-button' %>
			<% end %>
			<%= link_to "https://www.linkedin.com/in/myotkyaw", :target => "_blank" do %>
				<%= image_tag 'in.png', :class => 'social-button' %>
			<% end %>
			<%= link_to "https://www.youtube.com/watch?v=JRLTiVrr0Bo", :target => "_blank" do %>
				<%= image_tag 'yt.png', :class => 'social-button' %>
			<% end %>
		</div>
	</div>
</div>

</body>
</html>
