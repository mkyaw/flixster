<script type="text/javascript">
  $(function() {
    $(".lessons").sortable({
      update: function(evnt,ui) {
        //alert("Update URL: " + ui.item.data('lsnupdate-url') + " Index: " + ui.item.index());
        $.ajax({
          type: 'PUT',
          url: ui.item.data('lsnupdate-url'),
          dataType: 'json',
          data: { lesson: { row_order_position : ui.item.index()}}
        });
      }
    });
  });

  $(function() {
    $(".sections").sortable({
      update: function(evnt,ui) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('secupdate-url'),
          dataType: 'json',
          data: { section: { row_order_position : ui.item.index()}}
        });
      }
    });
  });
</script>

<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <%= image_tag current_course.image, :class => 'img-responsive' %>
  <br />
  <h3 class="text-center"><%= current_course.description %></h3>
  <br />
  <h3 class="text-center"><%= number_to_currency current_course.cost %></h3>
  <br />

  <h4>
    <ul class="col-xs-11 col-xs-offset-1 sections">
      <% current_course.sections.rank(:row_order).each do |section| %>
        <li data-secupdate-url = "<%= instructor_section_path(section) %>" 
        class="section-li">
          <div class="header">
            <span class="glyphicon glyphicon-list"></span>
            <%= section.title %>
          </div>
          <%= link_to "New Lesson", new_instructor_section_lesson_path(section), :class => "pull-right btn btn-primary btn-xs" %>
          <br class="clr" />
          <br class="clr" />
          <ul class="lessons">
            <% section.lessons.rank(:row_order).each do |lesson| %>
              <br />
              <li data-lsnupdate-url = "<%= instructor_lesson_path(lesson) %>">
                <div class="col-xs-1">
                  <br />
                  <span class="glyphicon glyphicon-list"></span>
                </div>
                <div class="col-xs-11 text-center">
                  <p><b><%= lesson.title %></b></p>
                  <p><%= lesson.subtitle %></p>
                </div>
                <br class="clr" />
              </li>
            <% end %>
          </ul>
          <div class="clr"></div>
          <br />
        </li>
      <% end %>
    </ul>
  </h4>

  <br />

  <div class="text-center">
    <%= link_to "Preview as a Student", course_path(current_course), :class => "btn btn-success" %>
    <br />
    <br />
    <%= link_to "Add a new section...", new_instructor_course_section_path(current_course), :class => "btn btn-primary btn-lg" %>
  </div>
  <div class="clr"></div>
  <br />

</div>