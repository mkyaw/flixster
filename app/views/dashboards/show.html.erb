<br />

<div class="booyah-box col-xs-10 col-xs-offset-1 text-center">
  <h1>What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    
    <br />
    
    <%= image_tag course.image, class: "img-responsive" %>
    
    <br />
    
    <div class="col-xs-12 col-sm-8 text-center">
      <%= course.description %>
    </div>
    
    <div class="col-xs-12 col-sm-4 text-center">
      <%= link_to "More Info...", course_path(course), class: "btn btn-lg btn-primary" %>
    </div>
    
    <hr class="col-xs-6 col-xs-offset-3">

    <br class="clr" />
  <% end %>

  <h1>What I'm Teaching</h1>
  <% current_user.courses.each do |course| %>
    <br />
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    
    <br />
    
    <%= image_tag course.image, class: "img-responsive" %>
    
    <br />
    
    <div class="col-xs-12 col-sm-8 text-center">
      <%= course.description %>
    </div>
    
    <div class="col-xs-12 col-sm-4 text-center">
      <%= link_to "More Info...", course_path(course), class: "btn btn-lg btn-primary" %>
    </div>
    
    <hr class="col-xs-6 col-xs-offset-3">

    <br class="clr" />
  <% end %>
</div>